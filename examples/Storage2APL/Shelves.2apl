include: person.2apl;


beliefupdates:
	{ shelf(X, Y, free) }	AssignShelf(X, Y)	{ not shelf(X, Y, free), shelf(X, Y, full) }


pcrules:
	event(wallAt(X, Y), blockworld) <- true |
	{
		+ shelf(X, Y, free);
	}
	
	message(im, request, La, On, _) <- true |
	{
		adoptz(assignShelf);
	}
	

pgrules:
	assignShelf <- shelf(X, Y, free) |
	{
		AssignShelf(X, Y);
		send(im, inform, shelf(X, Y));
		dropgoal(assignShelf);
	}