include: person.2apl;


pgrules:
	task(Xb, Yb, Xs, Ys) <- true |
	{
		goto(Xb, Yb);
		@blockworld( pickup(), _ );
		send(im, inform, took_over(Xb, Yb));
		
		goto(Xs, Ys);
		@blockworld( drop(), _ );
		+done(Xb, Yb, Xs, Ys);
	}
	
	task2(Xb, Yb, Xs, Ys) <- true |
	{
		goto(Xs, Ys);
		@blockworld( pickup(), _ );
		send(om, inform, took_over(Xs, Ys));
		
		goto(Xb, Yb);
		@blockworld( drop(), _ );
		+done(Xb, Yb, Xs, Ys);
	}
